@model LMS.ViewModels.BookIssuingViewModel
@{
    ViewData["Title"] = "Book Issuing";
    int i = 0;
}
<div id="bookissuing" class="container-fluid">
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-lg-5">
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-12 d-flex justify-content-center">
                                <h3>Book Issuing</h3>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 d-flex justify-content-center">
                                <img src="~/lib/resources/imgs/books.png" width="150" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <label>Issue ID</label>&nbsp<span asp-validation-for="issue.issue_id" class="text-danger"></span>
                                <div class="form-group input-group">
                                    <input class="form-control" ID="issueid_input" />
                                    <div class="input-group-append">
                                        <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <label>Status</label>&nbsp<span asp-validation-for="issue.issue_status" class="text-danger"></span>
                                <div class="form-group input-group">
                                    <input class="form-control" ID="status" readonly />
                                    <div class="input-group-append">
                                        <button class="btn btn-success"><i class="fas fa-check-circle"></i></button>
                                        <button class="btn btn-warning"><i class="far fa-pause-circle"></i></button>
                                        <button class="btn btn-danger"><i class="fas fa-times-circle"></i></button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <label>Member ID</label>&nbsp<span asp-validation-for="issue.member_id" class="text-danger"></span>
                                <div class="form-group">
                                    <input class="form-control" ID="member_id"  />
                                </div>
                            </div>
                            <div class="col-6">
                                <label>Book ID</label>&nbsp<<span asp-validation-for="issue.book_id" class="text-danger"></span>
                                <div class="form-group">
                                    <input class="form-control" ID="book_id"  />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <label>Member Name</label>
                                <div class="form-group">
                                    <input class="form-control" ID="member_name"  readonly />
                                </div>
                            </div>
                            <div class="col-6">
                                <label>Book Name</label>
                                <div class="form-group">
                                    <input class="form-control" ID="book_name" readonly />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6">
                                <label>Start Date</label>
                                <div class="form-group">
                                    <input class="form-control" ID="start_date" type="date" />
                                </div>
                            </div>
                            <div class="col-6">
                                <label>End Date</label>
                                <div class="form-group">
                                    <input class="form-control" ID="end_date" type="date" />
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-6 mx-auto">
                                <button class="btn btn-block btn-primary" ID="Issue">Issue</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-lg-7 mt-3 mt-lg-0 mt-xl-0">
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-12 d-flex justify-content-center">
                                <h3>Issued Book List</h3>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>
                                                No.
                                            </th>
                                            <th>
                                                Issue ID
                                            </th>
                                            <th>
                                                Email
                                            </th>
                                            <th>
                                                Book ID
                                            </th>
                                            <th>
                                                Issue Date
                                            </th>
                                            <th>
                                                Due Date
                                            </th>
                                            <th>
                                                Issue Status
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            foreach (var Data in Model.issue_list)
                                            {
                                                <tr>
                                                    <td>
                                                        @(++i)
                                                    </td>
                                                    <td>
                                                        @Data.issue_id
                                                    </td>
                                                    <td>
                                                        @Data.member_id
                                                    </td>
                                                    <td>
                                                        @Data.book_id
                                                    </td>
                                                    <td>
                                                        @Data.issue_date
                                                    </td>
                                                    <td>
                                                        @Data.due_date
                                                    </td>
                                                    <td>
                                                        @Data.issue_status
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".table").prepend($("<thead></thead>").append($(this).find("tr:first"))).dataTable();
    });
</script>